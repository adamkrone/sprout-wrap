  sprout:
    dock_preferences:
      orientation: 'bottom'
  rvm:
    rubies:
      "ruby-2.0.0-p353" => { :command_line_options => "--verify-downloads 1" },
      "ruby-2.1.0" => { :command_line_options => "--verify-downloads 1" }
  workspace_directory: 'projects'
  git_projects:
    -
      - sprout-wrap
      - https://github.com/adamkrone/sprout-wrap.git
  sprout:
    homebrew:
      casks:
